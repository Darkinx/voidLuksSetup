Edit emptty config file
	tty=2
	sudo sed -i "s/^#*TTY_NUMBER=TTY[0-9]*/TTY_NUMBER=TTY$tty/i" /etc/emptty/conf
	sudo sed -i "s/^#*DEFAULT_USER=/DEFAULT_USER=$user_name/i" /etc/emptty/conf
  
Disable services
	for service in rm_service #agetty-tty[2-6], mdadm, sshd, acpid, NetworkManager
	do
		sudo rm /var/service/$service
	done
  
Enable services
	for service in add_service #dbus, elogind, dhcpcd, emptty, firewall, cron, ntp
	do
		sudo ln -s /etc/sv/$service /var/service/
	done 

Enable SSD trim

Enable AppArmor

Firewall setup

Enable numlock on startup
	echo 'INITTY=/dev/tty[1-2]; for tty in $INITTY; do setleds -D +num < $tty; done' >> /etc/rc.conf
